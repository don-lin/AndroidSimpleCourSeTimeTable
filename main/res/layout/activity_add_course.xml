<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.coursetimetable.AddActivity" >

    <EditText
        android:id="@+id/code"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Module Code" />
    <EditText
        android:id="@+id/name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Full Module Name" />
    <EditText
        android:id="@+id/lecture"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Lecture/Practical choice" />
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/addWeekDay"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="+"></Button>
        
        <TextView
            android:id="@+id/weekDay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Monday" />

        <Button
            android:id="@+id/minusWeekDay"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="-"></Button>
        
        
    </LinearLayout>
    
    <EditText
        android:id="@+id/stime"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Time - start time format like 12:34" />

    

    <EditText
        android:id="@+id/etime"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Time - end time format like 13:57" />

    <EditText
        android:id="@+id/location"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Location (room #)" />
    <EditText
        android:id="@+id/comment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Additional info (comments)" />
    <Button 
        android:id="@+id/save"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="SAVE"/>
    <TextView
        android:id="@+id/display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

</LinearLayout>